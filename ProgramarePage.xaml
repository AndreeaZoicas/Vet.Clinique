<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VetClinique.ProgramarePage"
             Title="Adauga Programare">

    <StackLayout Padding="20">
        <Label Text="Pacient " FontSize="Medium" />
        <Picker x:Name="PacientPicker" Title="Selectează pacientul" />
        
        <Label Text="Veterinar" FontSize="Medium" />
        <Picker x:Name="VeterinarPicker" Title="Selectează medicul" />

        <Label Text="Data Programarii" FontSize="Medium" />
        <DatePicker x:Name="DataProgramariiPicker" />

        <Button Text="Salveaza Programare" Clicked="OnSaveProgramareClicked" BackgroundColor="#4CAF50" TextColor="White" />
    </StackLayout>
</ContentPage>
